# Server Configuration
PORT=8080
ENV=development
API_VERSION=v1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=quantum_shield
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# Python Quantum Service (gRPC)
QUANTUM_SERVICE_HOST=localhost
QUANTUM_SERVICE_PORT=50051

# File Storage
UPLOAD_MAX_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=/tmp/quantum-uploads
RESULT_TTL=3600           # 1 hour in seconds

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
